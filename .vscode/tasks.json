{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-galaga",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Iinclude",
                "src/*.cpp",
                "-o",
                "galaga",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
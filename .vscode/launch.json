{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Galaga",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/galaga",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-galaga"
        }
    ]
}